        <Grid Grid.Column="2" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Style="{StaticResource MBorder_LTR}">
                <TextBlock Text="线列表" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>
            <hc:TransitioningContentControl Grid.Row="1">
                <ListBox Width="auto" ItemsSource="{Binding LineList}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding name}" FontSize="20"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </hc:TransitioningContentControl>
        </Grid>

        <Grid  Grid.Column="3" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Style="{StaticResource TextBlockLargeBold}" Text="{Binding AREAACTIONNAME}"/>
                <TextBlock Style="{StaticResource TextBlockLarge}" Text="线路" FontSize="20"/>
            </StackPanel>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource MBorder_LT}">
                    <TextBlock Text="线名:" Style="{StaticResource TextBlockLarge}"/>
                </Border>

                <Border Grid.Row="0" Grid.Column="2" Style="{StaticResource MBorder_LT}">
                    <TextBlock Text="线号:" Style="{StaticResource TextBlockLarge}"/>
                </Border>

                <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource MBorder_LTB}">
                    <TextBlock Text="倒库任务数量上限:" Style="{StaticResource TextBlockLarge}"/>
                </Border>

                <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource MBorder_LTB}">
                    <TextBlock Text="上砖任务数量上限:" Style="{StaticResource TextBlockLarge}"/>
                </Border>

                <Border Grid.Row="3" Grid.Column="0" Style="{StaticResource MBorder_LTB}">
                    <TextBlock Text="下砖任务数量上限:" Style="{StaticResource TextBlockLarge}"/>
                </Border>

                <Border Grid.Row="4" Grid.Column="0" Style="{StaticResource MBorder_LTB}">
                    <TextBlock Text="是否需要倒库:" Style="{StaticResource TextBlockLarge}"/>
                </Border>

                <Border Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource MBorder_LTB}">
                    <StackPanel VerticalAlignment="Center" Margin="10">
                        <TextBlock Text="下砖轨道满砖上限：" Style="{StaticResource TextBlockLarge}"/>
                        <TextBlock Text="(可选）" Style="{StaticResource TextBlockLarge}"/>
                    </StackPanel>
                </Border>

                <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource MBorder_LTR}">
                    <TextBox Text="{Binding LineName,Mode=TwoWay}" BorderThickness="1" Margin="10" FontSize="25"/>
                </Border>

                <Border Grid.Row="0" Grid.Column="3" Style="{StaticResource MBorder_LTR}">
                    <TextBox Text="{Binding LineNum,Mode=TwoWay}" BorderThickness="1" Margin="10" FontSize="25"/>
                </Border>

                <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource MBorder_LTRB}">
                    <TextBox Text="{Binding SortCount,Mode=TwoWay}" BorderThickness="1" Margin="10" FontSize="25"/>
                </Border>

                <Border Grid.Row="2" Grid.Column="1" Style="{StaticResource MBorder_LTRB}">
                    <TextBox Text="{Binding UpCount,Mode=TwoWay}" BorderThickness="1" Margin="10" FontSize="25"/>
                </Border>

                <Border Grid.Row="3" Grid.Column="1" Style="{StaticResource MBorder_LTRB}">
                    <TextBox Text="{Binding DownCount,Mode=TwoWay}" BorderThickness="1" Margin="10" FontSize="25"/>
                </Border>

                <Border Grid.Row="4" Grid.Column="1" Style="{StaticResource MBorder_LTRB}">
                    <ComboBox ItemsSource="{Binding Source={StaticResource LineTypeE}}" Margin="10"
                                    SelectedItem="{Binding LineType,Mode=TwoWay}" FontSize="25"/>
                </Border>

                <Border Grid.Row="5" Grid.Column="2" Style="{StaticResource MBorder_LTRB}">
                    <TextBox Text="{Binding FullQty,Mode=TwoWay}" BorderThickness="1" Margin="10" FontSize="25"/>
                </Border>
            </Grid>

            <StackPanel Grid.Row="2" HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,10,0,20">
                <Button Width="120" Margin="0,0,55,0" Command="{Binding CancelCmd}" Style="{StaticResource ButtonDanger}" Content="取消" IsCancel="True"/>
                <Button Width="120" Margin="55,0,0,0" Command="{Binding ComfirmCmd}" Style="{StaticResource ButtonPrimary}" Content="保存" IsDefault="True"
                              Tag="ComfirmLine"   CommandParameter="{Binding Tag,RelativeSource={RelativeSource Self}}"/>
            </StackPanel>
        </Grid>

