        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Grid.ColumnSpan="2" Style="{StaticResource MBorder_LTR}">
                <TextBlock Text="区域信息" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>
            <hc:TransitioningContentControl Grid.Column="0" Grid.Row="1">
                <ListBox Width="auto" ItemsSource="{Binding AreaList}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding name}" FontSize="20"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </hc:TransitioningContentControl>

            <Border Style="{StaticResource MBorder_LTB}" Grid.Column="1" Grid.Row="1">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                        <TextBlock Style="{StaticResource TextBlockLargeBold}" Text="{Binding AREAACTIONNAME, Mode=TwoWay}"/>
                        <TextBlock Style="{StaticResource TextBlockLarge}" Text="区域"/>
                    </StackPanel>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" MinWidth="60"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource MBorder_T}">
                            <TextBlock Text="名称:" Style="{StaticResource TextBlockLarge}"/>
                        </Border>

                        <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource MBorder_T}">
                            <StackPanel VerticalAlignment="Center" Margin="10">
                                <TextBlock Text="上砖侧运输车：" Style="{StaticResource TextBlockLarge}"/>
                                <TextBlock Text="(可选）" Style="{StaticResource TextBlockLarge}"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource MBorder_TB}">
                            <StackPanel VerticalAlignment="Center" Margin="10">
                                <TextBlock Text="下砖侧运输车：" Style="{StaticResource TextBlockLarge}"/>
                                <TextBlock Text="(可选）" Style="{StaticResource TextBlockLarge}"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource MBorder_TR}">
                            <TextBox x:Name="AutoPostBack" Text="{Binding AreaName,Mode=TwoWay}" BorderThickness="1" Margin="10" FontSize="25"/>
                        </Border>

                        <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource MBorder_TR}">
                            <TextBox Text="{Binding UpCar,Mode=TwoWay}" BorderThickness="1" Margin="10" FontSize="25"/>
                        </Border>

                        <Border Grid.Row="2" Grid.Column="1" Style="{StaticResource MBorder_TRB}">
                            <TextBox Text="{Binding DownCar,Mode=TwoWay}" BorderThickness="1" Margin="10" FontSize="25"/>
                        </Border>
                    </Grid>

                    <StackPanel Grid.Row="2" HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,10,0,20">
                        <Button Width="120" Margin="0,0,55,0" Command="{Binding CancelCmd}" Style="{StaticResource ButtonDanger}" Content="取消" IsCancel="True"/>
                        <Button Width="120" Margin="55,0,0,0" Command="{Binding ComfirmCmd}" Style="{StaticResource ButtonPrimary}" Content="保存" IsDefault="True"
                              Tag="ComfirmArea"   CommandParameter="{Binding Tag,RelativeSource={RelativeSource Self}}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        


